{
    "parser": "babel-eslint",
    "extends": "airbnb-base",
    "env": {
      "browser": true,
      "node": true
    },
      "globals": {
        "document": false
      },
      "settings": {
        "import/resolver": {
          "node": {
            "paths": ["src"]
          }
        }
      },
    "rules": {  
       "no-plusplus": [  
          "off",
          {  
            "allowForLoopAfterthoughts": true
          }
       ],
       "no-useless-concat": "off",
       "allowTemplateLiterals": true,
       "no-useless-return": "off",
       "prefer-template": "off",
       "semi": 1,
       "comma-dangle": "off",
       "object-shorthand": "off",
       "func-names": "off",
       "prefer-arrow-callback": "off",
       "max-len": "off",
       "strict": "off",
       "no-unused-expressions": "off",
       "no-useless-escape": "off",
       "prefer-destructuring": "off",
       "camelcase": 1,
       "no-debugger": 1,
       "no-unused-vars": 1,
       "lines-between-class-members": ["warn", "always"],
       "linebreak-style":1,
       "indent": 1,
       "padded-blocks": 1,
       "no-restricted-syntax": 0,
       "no-console": 0,
       "consistent-return": 1,
       "no-new": 0,
       "no-param-reassign": ["error", { "props": false }]
      }
 }